generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/.prisma/client"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model ScheduledPost {
  id            String       @id @default(uuid())
  content       String       // JSON string of MediaContent
  platforms     String       // JSON string of string[]
  scheduledTime DateTime
  status        String       @default("pending")
  error         String?
  externalJobId String?      // ID from external scheduler (Upload-Post)
  createdAt     DateTime     @default(now())
  brandId       String?      // Link to brand context
  brand         BrandProfile? @relation(fields: [brandId], references: [id])
}

model BrandProfile {
  id              String           @id @default(uuid())
  companyName     String           @default("")
  industry        String           @default("")
  targetAudience  String           @default("")
  toneOfVoice     String           @default("Professional")
  keywords        String           @default("") // Comma separated
  updatedAt       DateTime         @updatedAt
  scheduledPosts  ScheduledPost[]
  socialAccounts  SocialAccount[]
}

model SocialAccount {
  id           String       @id @default(uuid())
  platform     String       // 'twitter', 'linkedin', etc.
  accessToken  String
  refreshToken String?
  tokenSecret  String?      // For Twitter v1.0a / OAuth 1.0
  expiresAt    DateTime?
  brandId      String
  brand        BrandProfile @relation(fields: [brandId], references: [id])
  createdAt    DateTime     @default(now())
  updatedAt    DateTime     @updatedAt

  @@unique([platform, brandId])
}
